<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sh_customer_statement_wizard_view" model="ir.ui.view">
		<field name="name">sh.customer.statement.report.wizard</field>
		<field name="model">sh.customer.statement.report.wizard</field>
		<field name="arch" type="xml">
			<form string="Salesperson Own Customer Statement">
				<group>
					<group>
						<field name="sh_report_type" widget="radio"/>
					</group>
				</group>
				<group>
					<group>
						<field name="sh_date_from"/>
						<field name="sh_partner_ids" widget="many2many_tags"/>
					</group>
					<group>
						<field name="sh_date_to"/>
					</group>
				</group>
				<footer>
                    <button string="Print" name="action_print" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
			</form>
		</field>
	</record>
	<record id="sh_action_customer_statement_report_wizard" model="ir.actions.act_window">
		<field name="name">Salesperson Own Customer Statement</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sh.customer.statement.report.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
	<menuitem id="sh_menu_accounting_report" name="Account Reporting" parent="sale.sale_menu_root"/>
	<menuitem id="sh_menu_customer_statement_report" name="Customer Statement" parent="sh_menu_accounting_report" action="sh_action_customer_statement_report_wizard"/>
</odoo>