			<field eval="1" name="perm_write" />
			<field eval="1" name="perm_unlink" />
			<field eval="1" name="perm_create" />
		</record>
		
		<!-- Regional Manager Leader -->
		<record id="property_rule_personal_target_regional_manager"
			model="ir.rule">
			<field name="name">Sale Team Leader - Personal Target Rule</field>
			<field name="model_id" ref="model_personal_sales_target" />
			<field name="domain_force">['|',('sale_person_id.sale_team_id.regional_manager_id','=',user.id),('sale_person_id.sale_team_id.regional_manager_id','=',False)]</field>
			<field name="groups"
				eval="[(6,0,[ref('to_sales_team_advanced.group_sale_regional_manager')])]" />
			<field eval="1" name="perm_read" />
			<field eval="1" name="perm_write" />
			<field eval="1" name="perm_unlink" />
			<field eval="1" name="perm_create" />
		</record>

		<record id="property_rule_team_target_regional_manager" model="ir.rule">
			<field name="name">Sale Team Leader - Team Target Rule</field>
			<field name="model_id" ref="model_team_sales_target" />
			<field name="domain_force">['|',('crm_team_id.regional_manager_id','=',user.id),('crm_team_id.regional_manager_id','=',False)]</field>
