			<field eval="1" name="perm_create" />
		</record>

		<!-- All Documents -->
		<record id="property_rule_personal_target_regional_sale_manager"
			model="ir.rule">
			<field name="name">All Documents - Personal Target Rule</field>
			<field name="model_id" ref="model_personal_sales_target" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups"
				eval="[(6,0,[ref('sales_team.group_sale_salesman_all_leads')])]" />
			<field eval="1" name="perm_read" />
			<field eval="1" name="perm_write" />
			<field eval="1" name="perm_unlink" />
