<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<!-- Salesman -->
		<record id="property_rule_personal_target_saleman_user" model="ir.rule">
			<field name="name">Salesman User - Personal Target Rule</field>
			<field name="model_id" ref="model_personal_sales_target" />
			<field name="domain_force">['|',('sale_person_id','=',user.id),('sale_person_id','=',False)]</field>
			<field name="groups" eval="[(6,0,[ref('sales_team.group_sale_salesman')])]" />
			<field eval="1" name="perm_read" />
			<field eval="0" name="perm_write" />
			<field eval="0" name="perm_unlink" />
			<field eval="0" name="perm_create" />
		</record>

		<record id="property_rule_team_target_saleman_user" model="ir.rule">
			<field name="name">Salesman User - Team Target Rule</field>
			<field name="model_id" ref="model_team_sales_target" />
			<field name="domain_force">[('crm_team_id', '=', user.sale_team_id.id)]</field>
			<field name="groups" eval="[(6,0,[ref('sales_team.group_sale_salesman')])]" />
			<field eval="1" name="perm_read" />
			<field eval="0" name="perm_write" />
			<field eval="0" name="perm_unlink" />
			<field eval="0" name="perm_create" />
		</record>

		<!-- Team Leader -->
		<record id="property_rule_personal_target_sale_team_leader"
			model="ir.rule">
			<field name="name">Sale Team Leader - Personal Target Rule</field>
			<field name="model_id" ref="model_personal_sales_target" />
			<field name="domain_force">[('sale_person_id.sale_team_id.user_id','=',user.id)]</field>
			<field name="groups"
				eval="[(6,0,[ref('to_sales_team_advanced.group_sale_team_leader')])]" />
			<field eval="1" name="perm_read" />
			<field eval="1" name="perm_write" />
			<field eval="1" name="perm_unlink" />
			<field eval="1" name="perm_create" />
		</record>

		<record id="property_rule_team_target_sale_team_leader" model="ir.rule">
