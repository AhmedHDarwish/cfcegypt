		</record>
		<record id="sh_sale_commision_model_company_rule" model="ir.rule">
	        <field name="name">Commission Model company rule</field>
	        <field name="model_id" ref="model_sh_sale_commision_model"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
	    </record>
	</data>
</odoo>
