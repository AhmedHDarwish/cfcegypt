<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invocing_report_options_form" model="ir.ui.view">
            <field name="name">Print Report</field>
            <field name="model">invocing.report.options</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="sales_team_ids" widget = 'many2many_tags'/>
                            <field name="sales_person_ids" widget = 'many2many_tags'/>
                            <field name="customer_ids" widget = 'many2many_tags'/>
                            <field name="product_category_ids" widget = 'many2many_tags'/>
                            <field name="company_ids" widget = 'many2many_tags'/>
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="start_invoicing_report_options_action" model="ir.actions.act_window">
            <field name="name">Supllyier report options</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invocing.report.options</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="invocing_report_options_form"/>
            <field name="target">new</field>
        </record>
          
        <menuitem name="Invoicing Report" parent="sale.menu_sale_report" sequence="100" id="invocing_report"
        action="start_invoicing_report_options_action" groups='invoicing_report.group_can_see_invoicing_report'/>

    </data>
</odoo>