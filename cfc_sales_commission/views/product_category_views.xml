				<group name="account_property" position="before">
                    <group>
                        <group string="80% Percent Commission">
                            <field name="team_lead_eighty_percent" string="Team Leader Percentage"/>
                            <field name="sale_person_eighty_percent" string="Sales Person Percentage"/>
                        </group>
                        <group string="100% Percent Commission">
                            <field name="team_lead_hundred_percent" string="Team Leader Percentage"/>
                            <field name="sale_person_hundred_percent" string="Sales Person Percentage"/>
                        </group>
                    </group>
                </group>
			</field>
		</record>
	</data>
